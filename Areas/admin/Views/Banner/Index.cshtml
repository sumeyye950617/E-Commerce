@model IEnumerable<Banner>
<div class="right_col" role="main">
    <div class="">
        <div class="row" style="display: block;">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Slayt Yönetimi<small>Tüm Slaytlar</small></h2>
                        <a asp-controller="Banner" asp-action="New" class="btn btn-primary float-right"  ; style="border-radius: 23px; color: #212529; background-color: #5A738E; border-color: #E7E7E7">Yeni Slayt</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <img class="kResim" />
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Slayt Adı</th>
                                      
                                        <th class="column-title">Slayt Açıklaması</th>
                                      
                                        <th class="column-title">Slayt Linki</th>
                                        <th class="column-title">Görüntülenme Sırası</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Banner s in Model)
                                    {
                        <tr class="even pointer">
                            <td onmousemove="$('.kResim').show();$('.kResim').attr('src', '@s.Picture'); $('.kResim').css('top', $(this).position().top+50)" onmouseout="$('.kResim').hide()"><a asp-controller="Banner" asp-action="Update" asp-route-id="@s.ID">@s.Name</a></td>
                            
                            <td>@s.Description</td>
                         
                            <td>@s.Link</td>
                            <td>@s.DisplayIndex</td>
                            <td><a style="color:#fff;cursor:pointer" class="btn btn-round btn-danger deleteButton" silmeAction="/admin/slayt/sil/@s.ID">Sil</a></td>
                        </tr>}
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
