<!--================ Hero banner start =================-->
<!--================ Hero Carousel start =================-->
<section class="section-margin mt-0">
    <div class="owl-carousel owl-theme hero-carousel ">

     
        @foreach (Banner s in Model.Slides)
        {


            <div class=" hero-carousel__slide">
                <img src="@s.Picture" alt="" class="img-fluid">
                <a href="#" class="hero-carousel__slideOverlay">
                    <h3>@s.Name</h3>
                    <p>@s.Description</p>
                </a>
            </div>
        }
    </div>
        }
   
</section>
<!--================ Hero Carousel end =================-->
