<!-- ================ Blog section start ================= -->
<section class="blog">
    <div class="container">
        <div class="section-intro pb-60px">
            <p>En Çok Okunan  Blog Yazıları </p>
            <h2>Blog <span class="section-intro__style">Yazıları</span></h2>
        </div>

        <div class="row">
            @foreach (Blog b in Model.Blogs)
            {
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="card card-blog">
                        <div class="card-blog__img">
                            <img class="card-img rounded-0" src="@b.PicturePath" alt="">
                        </div>
                        <div class="card-body">
                            <ul class="card-blog__info">
                                <li><a href="#"> Sümeyye</a></li>
                                <li><a href="#"><i class="ti-comments-smiley"></i>@b.DisplayIndex</a></li>
                            </ul>
                            <h4 class="card-blog__title"><a href="single-blog.html">@b.Name</a></h4>
                            <p>@b.Detail</p>
                            <a class="card-blog__link" href="#">Daha Fazlası  <i class="ti-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>
