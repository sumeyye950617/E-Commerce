<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="contact">
    <div class="container h-100">
        <div class="blog-banner">
            <div class="text-center">
                <h1>BİZE ULAŞIN... </h1>
                <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">İletişim</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!-- ================ contact section start ================= -->
<section class="section-margin--small">
    <div class="container">
        <div class="d-none d-sm-block mb-5 pb-4">
            <div id="map" style="height: 420px;"></div>
            <script>
                function initMap() {
                    var uluru = { lat: -25.363, lng: 131.044 };
                    var grayStyles = [
                        {
                            featureType: "all",
                            stylers: [
                                { saturation: -90 },
                                { lightness: 50 }
                            ]
                        },
                        { elementType: 'labels.text.fill', stylers: [{ color: '#A3A3A3' }] }
                    ];
                    var map = new google.maps.Map(document.getElementById('map'), {
                        center: { lat: -31.197, lng: 150.744 },
                        zoom: 9,
                        styles: grayStyles,
                        scrollwheel: false
                    });
                }

            </script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDpfS1oRGreGSBU5HHjMmQ3o5NLw7VdJ6I&callback=initMap"></script>

        </div>


        <div class="row">
            <div class="col-md-4 col-lg-3 mb-4 mb-md-0">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>ANKARA /TÜRKİYE</h3>
                        <p>Karanfil Sokak, Çankaya</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-headphone"></i></span>
                    <div class="media-body">
                        <h3><a href="tel:454545654">053540845745</a></h3>
                        <p>Saat 09:00-18:00</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3><a href="mailto:support@colorlib.com">aksu@gmail.com</a></h3>
                        <p>Her zaman mesaj atabilirsiniz!...</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-lg-9">
                <form class="form-contact contact_form" asp-controller="Contact" asp-action="ContactForm" method="post" id="contactForm">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group">
                                <input class="form-control" type="text" asp-for="@Model.Contacts.NameSurname" placeholder="Adınız Soyadınız:" /><span asp-validation-for="@Model.Contacts.NameSurname"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="email" asp-for="@Model.Contacts.MailAddress" placeholder="Mail Adresiniz:" /><span asp-validation-for="@Model.Contacts.MailAddress"></span>

                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" asp-for="@Model.Contacts.Subject" placeholder="Konu Giriniz:" /><span asp-validation-for="@Model.Contacts.Subject"></span>
                            </div>


                        </div>
                        <div class="col-lg-7">
                            <div class="form-group">
                                <textarea class="form-control different-control w-100" name="message" id="message" cols="30" rows="5" asp-for="@Model.Contacts.Mesaj" placeholder="Mesajınızı Gönderebilirsiniz..."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center text-md-right mt-3">
                        <div class="contact">
                            <button type="submit" ıd="buttoncontact" data-toggle="modal" class="button primary-btn" onclick="deneme()" > GÖNDER...</button><span style="color:black">@*@TempData["sonuc"*@</span>
                        </div>
                    </div>
                    @Html.AntiForgeryToken()


                </form>
            </div>
        </div>
    </div>
</section>
@*================ contact section end =================*@

